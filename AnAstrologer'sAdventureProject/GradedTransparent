import java.awt.image.BufferedImage;
import java.io.File;
import java.io.IOException;
import javax.imageio.ImageIO;

public class GradedTransparent {
    
    public static void main(String[] args) {
        String path  = "MagicForest_Obstacles/magic_forest_ground_0.png";
        String gpath = "MagicForest_Obstacles/magic_forest_ground_1.png";
        double thickness = 0.5;
        double gamma = 1.;

        path = Animator.CFN("zodiac/" + path);
        gpath = Animator.CFN("zodiac/" + gpath);
        BufferedImage image = null;
        try {
            image = ImageIO.read(new File(path));
        } catch (IOException ex) {
            System.out.println("failed reading " + path);
            System.exit(1);
        }
        image = Animator.GradedSemiTransparent(image, thickness, gamma);
        File outputfile = new File(gpath);
        try {
            ImageIO.write(image, "png", outputfile);
        } catch (IOException ex) {
            System.out.println("failed writing " + gpath);
            System.exit(2);
        }
        System.exit(0);
    }
    
}
